<tr>
  <td><%= link_to subject.content, [:admins, subject] %></td>
  <td><%= subject.number_of_questions %></td>
  <td><%= subject.duration %></td>
  <td>
    <%= link_to t("subject.edit"), edit_admins_subject_path(subject),
      class: "btn btn-info icon-trash icon-white" %>
  </td>
  <td>
    <%= link_to t("subject.delete"), admins_subject_path(subject),
      method: :delete, data: {confirm: t("subject.confirm")},
      class: "btn btn-danger icon-trash icon-white" %>
  </td>
</tr>
