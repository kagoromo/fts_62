<% provide :title, t("user.all_exams") %>
<div class="row">
  <div class="col-md-12">
    <h1><%= t "user.all_exams" %></h1>
    <%= render "exam_create_form" %><br>
    <%= render "search_form" %>
    <table class="table table-bordered table-striped table-condensed">
      <thead>
        <tr>
          <th class="center"><%= sort_link @search, :created_at,
            t("search.sort.created_dates") %></th>
          <th class="center"><%= sort_link @search, :started_at,
            t("search.sort.started_dates") %></th>
          <th class="center"><%= sort_link @search, :subject_content,
            t("search.sort.subject_content") %></th>
          <th class="center"><%= sort_link @search, :status,
            t("search.sort.status") %></th>
          <th class="center"><%= sort_link @search, :subject_duration,
            t("search.sort.subject_duration") %></th>
          <th class="center"><%= sort_link @search,
            :subject_number_of_questions,
            t("search.sort.subject_number_of_questions") %></th>
          <th class="center"><%= sort_link @search, :spent_time,
            t("search.sort.spent_time") %></th>
          <th class="center"><%= sort_link @search, :score,
            t("search.sort.score") %></th>
          <th class="center"><%= t "exam.action" %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @exams %>
      </tbody>
    </table>
    <div class="text-center">
      <%= paginate @exams %>
    </div>
  </div>
</div>
